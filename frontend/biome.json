{
	"$schema": "https://biomejs.dev/schemas/2.0.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".svelte-kit/**",
			".pnpm-store/**",
			"node_modules/**",
			"package.json",
			"biome.json",
			"src/app.d.ts",
			"src/lib/grpc/**",
			"vite.config.ts",
			"svelte.config.js",
			"svelte.config.prod.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false
					}
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
