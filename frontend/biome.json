{
	"$schema": "https://biomejs.dev/schemas/2.0.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".svelte-kit/**",
			".pnpm-store/**",
			"node_modules/**",
			"package.json",
			"biome.json",
			"src/app.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useConst": "off",
				"noDefaultExport": "off",
				"useNamingConvention": "off"
			},
			"performance": {
				"noBarrelFile": "off",
				"noReExportAll": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"useImportExtensions": "off",
				"noUndeclaredVariables": "off",
				"noUnusedImports": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"useAwait": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
